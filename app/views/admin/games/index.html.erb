<div>
  <div class="h2 mb-5">ゲーム一覧</div>

  <div class="m-3">
    <%= link_to 'ゲーム追加', new_admin_game_path, class: "btn btn-outline-light" %>
  </div>

  <% @games.each do |game| %>
    <div class="d-inline-flex mb-3">
      <div>
        <%= image_tag game.get_game_image, size: "200x134" %>
      </div>
      <div class="ml-2">
        <%= link_to admin_game_path(game.id) do %>
          <h5><%= game.game_name %></h5>
        <% end %>
        <%= game.game_introduction %>
      </div>
    </div>
  <% end %>
  <%= paginate @games %>
</div>