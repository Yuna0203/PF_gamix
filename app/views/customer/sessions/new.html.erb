<!-- ログイン画面 -->
<div class="offset-4">

  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="field font-weight-bold pb-3">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50" %>
    </div>

    <div class="field font-weight-bold pb-3">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field pb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :次回からログインを省略する %>
      </div>
    <% end %>

    <div class="actions pb-3">
      <%= f.submit "Log in", class: "btn btn-outline-light btn-lg w-50" %>
    </div>
  <% end %>

  <%= render "customer/shared/links" %>

</div>