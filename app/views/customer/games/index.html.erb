<div>
  <div class="h4 mb-5 font-weight-bold">ゲーム一覧</div>
  <% @games.each do |game| %>
    <div class="d-inline-flex mb-3">
      <div>
        <%= image_tag game.get_game_image, size: "200x134" %>
      </div>
      <div class="ml-2">
        <%= link_to customer_game_path(game.id) do %>
          <h5><%= game.game_name %></h5>
        <% end %>
        <%= game.game_introduction %>
      </div>
    </div>
  <% end %>
  <%= paginate @games %>
</div>